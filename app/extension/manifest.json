{
  "manifest_version": 2,

  "name": "chatty weather plugin",
  "description": "This extension will chat with you about the weather",
  "version": "1.0",

  "browser_action": {
   "default_icon": "chattyWeather_sun_19x19.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "geolocation"
   ]
}